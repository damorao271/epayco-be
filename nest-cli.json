{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/epayco-be/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/epayco-be/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/epayco-be",
  "projects": {
    "business-service": {
      "type": "application",
      "root": "apps/business-service",
      "entryFile": "main",
      "sourceRoot": "apps/business-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/business-service/tsconfig.app.json"
      }
    },
    "db-service": {
      "type": "application",
      "root": "apps/db-service",
      "entryFile": "main",
      "sourceRoot": "apps/db-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/db-service/tsconfig.app.json"
      }
    }
  }
}
